{
  "openapi": "3.0.0",
  "info": {
    "title": "SpriteShift AI API",
    "version": "1.0.0",
    "description": "API for transforming static character art into animated sprites."
  },
  "servers": [
    {
      "url": "https://api.spriteshift.ai/v1"
    }
  ],
  "paths": {
    "/api/upload": {
      "post": {
        "summary": "Upload Image for Animation",
        "operationId": "uploadImage",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  },
                  "user_id": {
                    "type": "string"
                  },
                  "metadata": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "job_id": {
                      "type": "string"
                    },
                    "status_url": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/api/job/{job_id}/cancel": {
      "post": {
        "summary": "Cancel Job",
        "operationId": "cancelJob",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "cancelled"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "OAuth2": [
              "write:jobs"
            ]
          }
        ]
      }
    },
    "/api/job/{job_id}/status": {
      "get": {
        "summary": "Get Job Status",
        "operationId": "getJobStatus",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "progress_percent": {
                      "type": "integer"
                    },
                    "preview_url": {
                      "type": "string"
                    },
                    "logs": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "OAuth2": [
              "read:jobs"
            ]
          }
        ]
      }
    },
    "/api/preview/{asset_id}": {
      "get": {
        "summary": "Get Preview Asset",
        "operationId": "getPreviewAsset",
        "parameters": [
          {
            "name": "asset_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "image/gif": {},
              "image/png": {}
            }
          }
        }
      }
    },
    "/api/export": {
      "post": {
        "summary": "Export Asset",
        "operationId": "exportAsset",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "job_id": {
                    "type": "string"
                  },
                  "format": {
                    "type": "string"
                  },
                  "bitrate": {
                    "type": "integer"
                  },
                  "user_tier": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "OAuth2": [
              "write:export"
            ]
          }
        ]
      }
    },
    "/api/webhook": {
      "post": {
        "summary": "Webhook for Callbacks",
        "operationId": "webhook",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "job_id": {
                    "type": "string"
                  },
                  "event": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "OAuth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://api.spriteshift.ai/oauth/authorize",
            "tokenUrl": "https://api.spriteshift.ai/oauth/token",
            "scopes": {
              "read:jobs": "Read job status",
              "write:jobs": "Cancel jobs",
              "write:export": "Export assets"
            }
          }
        }
      },
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  }
}
